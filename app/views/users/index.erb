<div class="row-fluid">
  <div class="span12 actions">
    <div class="page-header">

      <h2><%= @page_title %></h2>
    </div>
  </div>
</div>

<div class="row-fluid">
  <div class="span12">
    <% if @users && @users.any? %>
      <table class="table table-striped">
        <thead>
        <tr>
          <th>Nombre</th>
          <th>Mail</th>
          <th>Acciones</th>
        </tr>
        </thead>
        <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= link_to user.name, user_path(user) %></td>
            <td><%= user.email %></td>
            <td class="delete">
              <div class="btn-group">
                <a class="btn dropdown-toggle" data-toggle="dropdown" href="#"><i class="icon-cog"></i>
                  <span class="caret"></span></a>
                <ul class="dropdown-menu">
                  <li>
                    <a href="<%= edit_user_path(user) %>"><i class="icon-edit"></i> Editar</a>
                  </li>
                  <li>
                    <%= link_to raw('<i class="icon-trash"></i> Eliminar'), user_path(user), :method => 'delete', :confirm => "¿Estás seguro que deseas eliminar este usuario?" if can? :manage, User %>
                  </li>
                </ul>
              </div>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    <% else %>
      <h3>Aún no hay insumos ingresados :(</h3>
    <% end %>
  </div>
</div>

<div class="row-fluid">
  <div class="span12">
    <div class="text-center">
      <%= paginate @users %>
    </div>
    <div class="pull-right">
      <%= page_entries_info @users %>
    </div>
  </div>
</div>