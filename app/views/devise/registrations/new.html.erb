<h2>Registro</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form-horizontal', role: 'form'}) do |f| %>
  <%= devise_error_messages! %>
  <fieldset>

    <div class="form-group">
      <%= f.label :name, 'Nombre', class: 'col-sm-1 control-label' %>
      <div class="col-sm-4">
        <%= f.text_field :name, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :email, class: 'col-sm-1 control-label' %>
      <div class="col-sm-4">
        <%= f.email_field :email, autofocus: true, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :password, class: 'col-sm-1 control-label' %>
      <div class="col-sm-4">
        <%= f.password_field :password, autocomplete: 'off', class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, 'Confirma tu Password', class: 'col-sm-1 control-label' %>
      <div class="col-sm-4">
        <%= f.password_field :password_confirmation, autocomplete: 'off', class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-1 col-sm-10">
        <%= f.submit 'Entrar', class: 'btn btn-primary' %>
      </div>
    </div>
  </fieldset>
<% end %>

<%= render 'devise/shared/links' %>
