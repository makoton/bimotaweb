<h5>Trabajos pendientes</h5>
<% if @order.tasks.pending.any? %>
  <% @order.tasks.pending.each do |task| %>
    <div class="col-md-12">
      <div class="panel panel-default">
        <div class="panel-heading"><%= task.title.capitalize %>
          <span class="pull-right"><%= link_to '<i class="fa fa-trash"></i>'.html_safe, delete_task_admin_vehicle_order_path(@vehicle, @order, task_id: task.id), method: :delete, data: {confirm: '¿Estás seguro de eliminar esta tarea?'} %></span>
        </div>
        <div class="panel-body">
          <div class="row">
            <div class="col-md-12">
              <strong>Acciones:</strong>
              <a href="#" class="btn btn-default action-btn" data-action-url="<%= add_consumable_supply_admin_vehicle_order_path(@vehicle, @order, task: task.id, format: 'js') %>"><i class="fa fa-plus"></i>
                Insumo
                utilizado</a>
              <a href="#" class="btn btn-default action-btn" data-action-url="<%= add_part_supply_admin_vehicle_order_path(@vehicle, @order, task: task.id, format: 'js') %>"><i class="fa fa-plus"></i>
                Repuesto
                utilizado</a>
              <a href="#" class="btn btn-default action-btn" data-action-url="<%= labor_cost_form_admin_vehicle_order_path(@vehicle, @order, task: task.id) %>"><i class="fa fa-plus"></i>
                Mano de obra</a>
              <%= link_to 'Finalizar', finish_task_admin_vehicle_order_path(@vehicle, @order, task: task.id), class: 'btn btn-success pull-right', data: {confirm: '¿Estás seguro de finalizar este trabajo?'} %>
            </div>
            <div class="col-md-12 actions-panel" style="display: none;"></div>
          </div>
        </div>
        <div class="panel-footer">
          <a href="#" class="task-details" data-task-url="<%= task_details_admin_vehicle_order_path(@vehicle, @order, task: task.id) %>"><i class="fa fa-angle-double-down"></i> resumen</a>
          <div class="details-panel" style="display: none;"></div>
        </div>
      </div>
    </div>
  <% end %>
<% else %>
  <span>No hay trabajos pendientes.</span>
<% end %>

<% if @order.tasks.any? %>
  <h5>Trabajos finalizados</h5>
  <% if @order.tasks.finished.any? %>
    <% @order.tasks.finished.each do |task| %>
      <div class="col-md-12">
        <div class="panel panel-default">
          <div class="panel-heading"><%= task.title.capitalize %></div>
          <div class="panel-body">
            <div class="row">
              <div class="col-md-12">
                <%= link_to 'Finalizar', finish_task_admin_vehicle_order_path(@vehicle, @order, task: task.id), class: 'btn btn-success pull-right', data: {confirm: '¿Estás seguro de finalizar este trabajo?'} %>
              </div>
            </div>
          </div>
          <div class="panel-footer">
            <a href="#" class="task-details" data-task-url="<%= task_details_admin_vehicle_order_path(@vehicle, @order, task: task.id) %>"><i class="fa fa-angle-double-down"></i> resumen</a>
            <div class="details-panel" style="display: none;"></div>
          </div>
        </div>
      </div>
    <% end %>
  <% else %>
    <span>No hay trabajos terminados aún.</span>
  <% end %>
<% end %>

<script type="text/javascript">
  function clearPanel($el) {
    if (!($el.parent().parent().find('.actions-panel').is(':hidden'))) {
      $el.parent().parent().find('.actions-panel').slideToggle();
    }
  }

  function showActionPanel($el) {
    $el.parent().parent().find('.actions-panel').slideToggle();
  }

  function toggleDetailsPanel($el){
    $el.slideToggle();
  }

  $('.action-btn').on('click', function () {
    var that = $(this);
    clearPanel(that);
    var url = that.data('action-url');
    $.get(url, function (data) {
      that.parent().parent().find('.actions-panel').html(data);
    });
    showActionPanel($(this));
  });

  $('.task-details').on('click', function () {
    var that = $(this);
    var panel = that.parent().find('.details-panel');

    if(!panel.is(':hidden')){
      toggleDetailsPanel(panel);
      return false;
    }

    var url = that.data('task-url');
    $.get(url, function (data) {
      panel.html(data);
      toggleDetailsPanel(panel);
    });
  });
</script>