<%= form_for @order, url: admin_vehicle_orders_path, html: {class: 'form-horizontal'} do |f| %>
  <fieldset>

    <% if @order.errors.any? %>
      <div class="col-md-12 alert alert-danger">
        <a class="close" data-dismiss="alert" href="#">×</a>

        <p>Hay <%= pluralize(@order.errors.count, 'error', 'errores') %>
          :
        </p>
        <ul>
          <% @order.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :model, 'Modelo', class: 'col-md-2 control-label' %>
      <div class="col-md-4">
        <%= f.text_field :model, class: 'form-control', required: 'required' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :year, 'Año', class: 'col-md-2 control-label' %>
      <div class="col-md-4">
        <%= f.text_field :year, type: 'number', min: '1900', class: 'form-control', required: 'required' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :license_plate, 'Patente', class: 'col-md-2 control-label' %>
      <div class="col-md-4">
        <%= f.text_field :license_plate, placeholder: 'AA000', class: 'form-control', required: 'required' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :chassis_number, 'Número de chasis', class: 'col-md-2 control-label' %>
      <div class="col-md-4">
        <%= f.text_field :chassis_number, class: 'form-control', required: 'required' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :kilometraje, 'Kilometraje', class: 'col-md-2 control-label' %>
      <div class="col-md-4">
        <%= f.text_field :kilometraje, type: 'number', min: '0', class: 'form-control', required: 'required' %>
      </div>
    </div>
  </fieldset>
  <div class="form-group">
    <div class="col-md-offset-2 col-md-4">
      <%= f.submit 'Guardar', :class => 'btn btn-primary' %>
    </div>
  </div>
<% end %>
