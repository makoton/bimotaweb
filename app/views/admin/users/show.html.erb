<div class="row">
  <div class="col-md-12 actions">
    <div class="page-header">
      <%= link_to '<i class="fa fa-chevron-left"></i> Volver'.html_safe, admin_vehicles_path, :class => 'btn btn-default btn-lg pull-right' %>
      <h2><%= @page_title %></h2>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-4">
    <div class="well">
      <h3>Detalle</h3>
      <dl class="dl-vm">
        <dt>Nombre</dt>
        <dd><%= @user.name %></dd>

        <dt>Email</dt>
        <dd><%= @user.email %></dd>
        <% if @user.user_information %>
            <dt>Rut</dt>
            <dd><%= @user.user_information.rut %></dd>

            <dt>Número de contacto</dt>
            <dd><%= @user.user_information.contact_phone %></dd>

            <dt>Direccion</dt>
            <dd><%= @user.user_information.address %></dd>
        <% else %>
            <h5>El usuario aun no completa sus datos personales</h5>
        <% end %>
      </dl>
    </div>
  </div>

  <div class="col-md-8">
    <% if @vehicles && @vehicles.any? %>
        <h4>Lista vehìculo</h4>
        <table class="table table-striped">
          <thead>
          <tr>
            <th>Marca</th>
            <th>Modelo</th>
            <th>Año</th>
          </tr>
          </thead>
          <tbody>
          <% @vehicles.each do |vehicle| %>
              <tr>
                <td><%= link_to vehicle.bike_brand.name, admin_vehicle_path(vehicle) %></td>
                <td><%= vehicle.model %></td>
                <td><%= vehicle.year %></td>
              </tr>
          <% end %>
          </tbody>
        </table>
    <% else %>
        <h3>Usuario sin vehículos :(</h3>
    <% end %>
  </div>

</div>
</div>











