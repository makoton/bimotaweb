<div class="row">
  <div class="col-md-12 actions">
    <div class="page-header">
      <%= link_to 'Invita a un usuario a registrarse', new_user_invitation_path, :class => 'btn btn-primary pull-right' %>
      <h2><%= @page_title %></h2>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <% if @users && @users.any? %>
      <table class="table table-striped">
        <thead>
        <tr>
          <th>Nombre</th>
          <th>Mail</th>
          <th>Acciones</th>
        </tr>
        </thead>
        <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= link_to user.name, admin_user_path(user) %></td>
            <td><%= user.email %></td>
            <td class="delete">
              <div class="btn-group">
                <a class="btn dropdown-toggle" data-toggle="dropdown" href="#"><i class="fa fa-cog"></i>
                  <span class="caret"></span></a>
                <ul class="dropdown-menu">
                  <li>
                    <a href="<%= edit_admin_user_path(user) %>"><i class="fa fa-pencil"></i> Editar</a>
                  </li>
                  <li>
                    <%= link_to(raw('<i class="fa fa-trash"></i> Eliminar'), admin_user_path(user), :method => 'delete', data: {confirm: '¿Estás seguro que deseas eliminar este usuario?'}) if can? :manage, User %>
                  </li>
                </ul>
              </div>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    <% else %>
      <h3>Aún no hay usuarios registrados :(</h3>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <div class="text-center">
      <%= paginate @users %>
    </div>
    <div class="pull-right">
      <%= page_entries_info @users %>
    </div>
  </div>
</div>