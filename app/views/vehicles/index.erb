<div class="row-fluid">
  <div class="span12 actions">
    <div class="page-header">
      <%= link_to 'Ingresa un Vehículo!', new_vehicle_path, :class => 'btn btn-primary btn-large pull-right' %>
      <h2><%= @page_title %></h2>
    </div>
  </div>
</div>

<div class="row-fluid">
  <div class="span12">
    <% if @vechicles && @vechicles.any? %>
      <table class="table table-striped">
        <thead>
        <tr>
          <th>Marca</th>
          <th>Modelo</th>
          <th>Año</th>
          <th>Nombre Cliente</th>
          <th>Acciones</th>
        </tr>
        </thead>
        <tbody>
        <% @vechicles.each do |vehicle| %>
          <tr>
            <td><%= link_to vehicle.brand, vehicle_path(vehicle) %></td>
            <td><%= vehicle.model %></td>
            <td><%= vehicle.year %></td>
            <td><%= vehicle.owner ? vehicle.owner.short_name : 'Sin Dueño' %></td>
            <td class="delete">
              <div class="btn-group">
                <a class="btn dropdown-toggle" data-toggle="dropdown" href="#"><i class="icon-cog"></i>
                  <span class="caret"></span></a>
                <ul class="dropdown-menu">
                  <li>
                    <a href="<%= edit_vehicle_path(vehicle) %>"><i class="icon-edit"></i> Editar</a>
                  </li>
                  <li>
                    <%= link_to raw('<i class="icon-trash"></i> Eliminar'), vehicle_path(vehicle), :method => 'delete', :confirm => "¿Estás seguro que deseas eliminar este vehículo?" if can? :manage, Vehicle %>
                  </li>
                </ul>
              </div>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    <% else %>
      <h3>Aún no hay vehículos ingresados :(</h3>
    <% end %>
  </div>
</div>

<div class="row-fluid">
  <div class="span12">
    <div class="text-center">
      <%= paginate @vehicles %>
    </div>
    <div class="pull-right">
      <%= page_entries_info @vehicles %>
    </div>
  </div>
</div>