<div class="row">
  <div class="col-md-12 actions">
    <div class="page-header">
      <%= link_to '<i class="fa fa-chevron-left"></i> Volver'.html_safe, me_vehicles_path, :class => 'btn btn-default btn-lg pull-right' %>
      <h2><%= @page_title %></h2>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <% if @orders && @orders.any? %>
      <table class="table table-striped">
        <thead>
        <tr>
          <th>ID</th>
          <th>Estado</th>
          <th>Fecha de creación</th>
          <th>Última actualización</th>
        </tr>
        </thead>
        <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td><%= link_to order.uuid, me_vehicle_order_path(@vehicle, order) %></td>
            <td><%= status_for(order) %></td>
            <td><%= order.created_at.strftime('%d-%m-%Y') %></td>
            <td><%= order.last_update.strftime('%d-%m-%Y %H:%M') %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    <% else %>
      <h3>Aún no hay ordenes para tu <%= @vehicle.full_name %></h3>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <div class="text-center">
      <%= paginate @orders %>
    </div>
    <div class="pull-right">
      <%= page_entries_info(@orders) if @orders.any? %>
    </div>
  </div>
</div>