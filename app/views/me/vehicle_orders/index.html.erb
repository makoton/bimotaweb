<div class="row">
  <div class="col-md-12 actions">
    <div class="page-header">
      <h2><%= @page_title %></h2>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <% if @orders && @orders.any? %>
      <table class="table table-striped">
        <thead>
        <tr>
          <th>Marca</th>
          <th>Modelo</th>
          <th>Año</th>
          <th>Nombre Cliente</th>
          <th>Acciones</th>
        </tr>
        </thead>
        <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td><%= link_to order.bike_brand.name, admin_vehicle_path(order) %></td>
            <td><%= order.model %></td>
            <td><%= order.year %></td>
            <td><%= order.user ? order.user.name.titleize : 'Sin Dueño' %></td>
            <td class="delete">
              <div class="btn-group">
                <a class="btn btn-default dropdown-toggle" data-toggle="dropdown" href="#"><i class="fa fa-cog"></i>
                  <span class="caret"></span></a>
                <ul class="dropdown-menu">
                  <li>
                    <a href="<%= edit_admin_vehicle_path(order) %>"><i class="fa fa-edit"></i> Editar</a>
                  </li>
                  <li>
                    <%= link_to(raw('<i class="fa fa-trash"></i> Eliminar'), admin_vehicle_path(order), :method => 'delete', data: {confirm: '¿Estás seguro que deseas eliminar este vehículo?'}) if can? :manage, Vehicle %>
                  </li>
                </ul>
              </div>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    <% else %>
      <h3>Aún no hay ordenes para tu <%= @vehicle.full_name %></h3>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <div class="text-center">
      <%= paginate @orders %>
    </div>
    <div class="pull-right">
      <%= page_entries_info(@orders) if @orders.any? %>
    </div>
  </div>
</div>