<!DOCTYPE html>
<html>
<head>
  <title><%= @page_title %> - Bimota Chile</title>
  <%= stylesheet_link_tag 'application' %>
  <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="navbar navbar-inverse navbar-fluid-top">
  <div class="navbar-inner">
    <div class="container-fluid">
      <a class="btn btn-navbar" data-target=".nav-collapse" data-toggle="collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
      <a class="brand" href="#">Bimota Chile</a>

      <div class="container-fluid nav-collapse">
        <ul class="nav">
          <li>Bienvenido!</li>
        </ul>

        <ul class="nav pull-right">
          <% if current_user %>
            <li><%= link_to "<i class='icon-white icon-off'></i> Salir".html_safe, destroy_user_session_path, method: 'delete' %></li>
          <% else %>
            <li><%= link_to "<i class='icon-white icon-off'></i> Ingresa".html_safe, new_user_session_path %></li>
          <% end %>
        </ul>
      </div>
      <!--/.nav-collapse -->
    </div>
  </div>
</div>

<div class="container-fluid">
  <div class="row-fluid">
    <div class="span12">
      <%= yield %>
    </div>
  </div>
  <!--/row-->
  <div class="footer navbar-fixed-bottom">
    <footer>
      <p>&copy; Bimota Chile 2015</p>
    </footer>
  </div>

</div>
<!-- /container -->

</body>
</html>
